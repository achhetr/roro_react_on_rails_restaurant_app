<%= simple_form_for [@restaurant, @review] do |f| %>
  <div class="form-group">
    <%= f.input :username, label: 'Your Username please', error: 'Username is mandatory, please specify one', class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.input :rating, label: "Rate the restaurant", collection: 1..5, class: "form-control", selected: 5 %>
  </div>
  <div class="form-group">
    <%= f.input :comment, label: 'Give your reviews', error: 'Review message is mandatory, please specify one', class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
